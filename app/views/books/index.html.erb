<p id="notice"><%= notice %></p>

<h1 style = "text-align:center;">Books</h1>
<p style = "text-align:center; margin: 20px 1px">
<%= link_to 'Create new Book', new_book_path %>
</p>

<% if @books.present? %>
  <table style = "margin:auto; border: 1px solid black; cell-padding:9px">
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title%></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3>No book found</h3>
<% end %>

<br>


